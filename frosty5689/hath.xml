<?xml version="1.0" encoding="utf-8"?>
<Containers>
  <Name>frosty5689-hath</Name>
  <Repository>frosty5689/hath</Repository>
  <Registry>https://hub.docker.com/r/frosty5689/hath</Registry>
  <Networking>
    <Mode>host</Mode>
  </Networking>
  <Privileged>false</Privileged>
  <Support>https://e-hentai.org/hentaiathome.php</Support>
  <Project>https://e-hentai.org/</Project>
  <Overview/>
  <Category/>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/frosty5689/docker-templates/master/frosty5689/hath.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/frosty5689/docker-templates/master/frosty5689/images/hath-icon.png</Icon>
  <ExtraParams>--user 99:100</ExtraParams>
  <DonateText/>
  <DonateLink/>
  <Description/>
  <Networking>
    <Mode>host</Mode>
    <Publish/>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/hentaiathome/cache</HostDir>
      <ContainerDir>/hath/cache</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/hentaiathome/data</HostDir>
      <ContainerDir>/hath/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/hentaiathome/download/</HostDir>
      <ContainerDir>/hath/download</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/hentaiathome/log</HostDir>
      <ContainerDir>/hath/log</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/hentaiathome/tmp</HostDir>
      <ContainerDir>/hath/tmp</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>Insert client ID from https://e-hentai.org/hentaiathome.php</Value>
      <Name>HATH_CLIENT_ID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Insert client key from https://e-hentai.org/hentaiathome.php</Value>
      <Name>HATH_CLIENT_KEY</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Set timezone if necessary</Value>
      <Name>TZ</Name>
      <Mode/>
    </Variable>
  </Environment>
</Containers>
